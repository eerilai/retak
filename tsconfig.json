{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types/*", "typings/*"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "outDir": "./client/dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "incremental": true,
        "strictBindCallApply": true,
        "lib": ["dom", "esnext"],
        "target": "es5",
        "jsx": "react",
        "allowJs": true
    }
}